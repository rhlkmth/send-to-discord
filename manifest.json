{
  "manifest_version": 3,
  "name": "My Send to Discord",
  "version": "1.0",
  "description": "Send links, images, and text to Discord via Webhook.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "send-page-shortcut": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Send current page to Discord"
    }
  }
}